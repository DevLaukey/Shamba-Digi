                            <div class="card-body">
                                <form action="/register" method="POST">
                                    <div class="form-row">
                                            <div class="form-group" style="width: 80%; display: flex;  align-items: center; justify-content: space-evenly;">
                                                <label for="name" class="form-label"  style="padding-right: 85px; color: white;">Name</label>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" style="border-radius: 50px;background: #fff;box-shadow: 0px 8px 15px #adadad;"required/>
                                            </div>
                                            <div class="form-group" style="width: 80%; display: flex; justify-content: space-between;">
                                                <label for="email" style="padding-right: 85px; color: white; font-size: 15px; font-weight: 500;">Email</label>
                                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" style="border-radius: 50px;background: #fff;box-shadow: 0px 8px 15px #adadad;"required/>
                                            </div>
                                            <div class="form-group" style="width: 80%; display: flex;  align-items: center; justify-content: space-evenly;">
                                                <label for="password"  style="padding-right: 55px; color: white; font-size: 15px; font-weight: 500;">Password</label>
                                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" style="border-radius: 50px;background: #fff;box-shadow: 0px 8px 15px #adadad;"required/>
                                            </div>
                                            <div class="form-group" style="width: 80%; display: flex;  align-items: center; justify-content: space-evenly;">
                                                <label for="cpassword"  style="padding-right: 25px; color: white; font-size: 15px; font-weight: 500;">Confirm Password</label>
                                                <input type="password" class="form-control" id="cpassword" name="cpassword" placeholder="Confirm Password" style="border-radius: 50px;background: #fff;box-shadow: 0px 8px 15px #adadad;" required/>
                                            </div>
                                            <% if (locals.error) {%>
                                                <p style="color: red;"><%= error %></p>
                                                <% } %>
                                    </div>
                                    <br>
                                    <br>
                                    <!-- <div class="form-group">
                                        <label class="custom-control custom-checkbox m-0">
                                            <input type="checkbox" class="custom-control-input" required />
